{
  "info": {
    "_postman_id": "b2a1d6a8-0000-4f3d-9a7b-1a2b3c4d5e6f",
    "name": "Pawtitas-WebApp API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colección para probar la API REST de Pawtitas-WebApp"
  },
  "item": [
    {
      "name": "Usuarios",
      "item": [
        {
          "name": "Register (crear cuenta)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombres\": \"Clint\",\n  \"apellidoPaterno\": \"Smith\",\n  \"apellidoMaterno\": \"Perez\",\n  \"nombreUsuario\": \"Clint S\",\n  \"correo\": \"juanitogamer2@example.com\",\n  \"contrasena\": \"54321\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/usuarios/register" }
          }
        },
        {
          "name": "Login (obtener JWT)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombreUsuario\": \"jorgendo\",\n  \"contrasena\": \"123456\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/usuarios/login" }
          }
        },
        {
          "name": "Obtener usuario por id (protegido)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwtToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/usuarios/1" }
          }
        }
      ]
    },
    {
      "name": "Productos",
      "item": [
        {
          "name": "Listar productos",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/productos/all" } }
        },
        {
          "name": "Crear producto (protegido)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwtToken}}" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Comida para gato\",\n  \"descripcion\": \"Alimento balanceado\",\n  \"precio\": 200.0,\n  \"cantidadStock\": 10,\n  \"activo\": true\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/productos" }
          }
        },
        {
          "name": "Obtener producto por id",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/productos/1" } }
        }
      ]
    },
    {
      "name": "Ventas",
      "item": [
        {
          "name": "Crear venta completa",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwtToken}}" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"clienteId\": 1,\n  \"items\": [{ \"productoId\": 1, \"cantidad\": 2 }],\n  \"pago\": { \"metodoPago\": \"tarjeta\", \"referencia\": \"TRANS-123\" }\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/ventas/createSale" }
          }
        },
        {
          "name": "Agregar item a venta",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwtToken}}" }],
            "body": { "mode": "raw", "raw": "{ \"ventaId\": 1, \"productoId\": 2, \"cantidad\": 1 }" },
            "url": { "raw": "{{baseUrl}}/api/ventas/addSellItem" }
          }
        },
        {
          "name": "Obtener venta por id",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/ventas/1" } }
        }
      ]
    },
    {
      "name": "Pagos",
      "item": [
        {
          "name": "Crear pago",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwtToken}}" }],
            "body": { "mode": "raw", "raw": "{ \"ventaId\": 1, \"monto\": 400, \"metodoPago\": \"tarjeta\", \"referencia\": \"CONF-1\" }" },
            "url": { "raw": "{{baseUrl}}/api/pagos" }
          }
        },
        { "name": "Listar pagos", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{jwtToken}}" }], "url": { "raw": "{{baseUrl}}/api/pagos/all" } } }
      ]
    },
    {
      "name": "Mascotas",
      "item": [
        {
          "name": "Crear mascota",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwtToken}}" }],
            "body": { "mode": "raw", "raw": "{ \"idCentroAdopcion\": 1, \"especie\": \"Perro\", \"nombre\": \"Firulais\", \"edad\": \"3 años\", \"tamano\": \"Mediano\", \"sexo\": \"macho\", \"descripcion\": \"Muy amigable\", \"estado\": \"disponible\" }" },
            "url": { "raw": "{{baseUrl}}/api/mascotas" }
          }
        },
        { "name": "Listar mascotas", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/mascotas/all" } } }
      ]
    },
    {
      "name": "Centros de adopción",
      "item": [
        {
          "name": "Crear centro",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwtToken}}" }],
            "body": { "mode": "raw", "raw": "{ \"nombre\": \"Centro Patitas\", \"correo\": \"centro@patitas.org\", \"telefono\": \"55-1234-5678\" }" },
            "url": { "raw": "{{baseUrl}}/api/centros" }
          }
        },
        { "name": "Listar centros", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/centros/all" } } }
      ]
    },
    {
      "name": "Adopciones",
      "item": [
        {
          "name": "Crear solicitud de adopción",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwtToken}}" }],
            "body": { "mode": "raw", "raw": "{ \"idUsuario\": 1, \"idMascota\": 1, \"tipoVivienda\": \"departamento\", \"razonAdopcion\": \"Quiero compañía\", \"tieneExperiencia\": true }" },
            "url": { "raw": "{{baseUrl}}/api/adopciones" }
          }
        },
        {
          "name": "Aprobar solicitud",
          "request": { "method": "PUT", "header": [{ "key": "Authorization", "value": "Bearer {{jwtToken}}" }], "url": { "raw": "{{baseUrl}}/api/adopciones/1/approve" } }
        },
        {
          "name": "Rechazar solicitud",
          "request": { "method": "PUT", "header": [{ "key": "Authorization", "value": "Bearer {{jwtToken}}" }], "url": { "raw": "{{baseUrl}}/api/adopciones/1/reject" } }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "jwtToken", "value": "" }
  ]
}
